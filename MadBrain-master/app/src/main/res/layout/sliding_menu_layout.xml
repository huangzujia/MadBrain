<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >
    <ScrollView 
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:scrollbars="none">
        <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="vertical">
            <RelativeLayout 
                android:layout_height="wrap_content"
                android:layout_width="fill_parent">
                 <TextView 
                  android:id="@+id/txt_title"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:textSize="29sp"
                  android:textColor="@color/main_1"
                  android:layout_marginTop="20dp"
                  android:layout_centerInParent="true"/>
                 
                 <ImageView 
                     android:id="@+id/img_close"
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:src="@drawable/close_menu"
                     android:layout_alignParentRight="true"
                     android:layout_centerVertical="true"
                     android:layout_marginRight="10dp"/>
            </RelativeLayout>
             
              
              <TextView 
                  android:id="@+id/txt_attention"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:textColor="@color/main_1"
                  android:text="@string/attention"
                  android:textSize="18sp"
                  android:padding="5dp"
                  android:layout_marginTop="20dp"/>
              
                <TextView 
                  android:id="@+id/txt_attention_content"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:textColor="@color/black"
                  android:textSize="18sp"
                  android:padding="5dp"/>
                
                <TextView 
                  android:id="@+id/txt_memory_part"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:textColor="@color/main_1"
                  android:text="@string/memory_part"
                  android:padding="5dp"
                  android:textSize="18sp"
                  android:layout_marginTop="20dp"/>
              
                <TextView 
                  android:id="@+id/txt_memory_content"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:textColor="@color/black"
                  android:textSize="18sp"
                  android:padding="5dp"/>
                
                <TextView 
                  android:id="@+id/txt_recall_part"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:textColor="@color/main_1"
                  android:text="@string/recall_part"
                  android:textSize="18sp"
                  android:padding="5dp"
                  android:layout_marginTop="20dp"/>
              
                <TextView 
                  android:id="@+id/txt_recall_content"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:textColor="@color/black"
                  android:textSize="18sp"
                  android:padding="5dp"/>
                
                 <TextView 
                  android:id="@+id/txt_function"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:textColor="@color/main_1"
                  android:text="@string/jf_function"
                  android:padding="5dp"
                  android:textSize="18sp"
                  android:layout_marginTop="20dp"/>
              
                <TextView 
                  android:id="@+id/txt_function_content"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:textColor="@color/black"
                  android:textSize="18sp"
                  android:padding="5dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
