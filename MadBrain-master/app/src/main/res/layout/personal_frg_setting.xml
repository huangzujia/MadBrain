<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:gravity="center_horizontal"    android:orientation="vertical"    android:paddingLeft="60dp"    android:paddingRight="60dp">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginBottom="2dp"        android:layout_marginTop="6dp"        android:gravity="center"        android:orientation="horizontal">        <TextView            android:id="@+id/text_system_setting"            style="@style/PersonalFrgSettingText"            android:drawableBottom="@drawable/personal_frg_setting_system_setting"            android:text="@string/system_setting" />        <TextView            android:id="@+id/text_about_us"            style="@style/PersonalFrgSettingText"            android:drawableBottom="@drawable/personal_frg_setting_about_us"            android:text="@string/about_us" />        <TextView            android:id="@+id/text_suggest_feedback"            style="@style/PersonalFrgSettingText"            android:drawableBottom="@drawable/personal_frg_setting_suggest_feedback"            android:text="@string/suggestion_feedback" />        <TextView            android:id="@+id/text_modify_login_pwd"            style="@style/PersonalFrgSettingText"            android:drawableBottom="@drawable/personal_frg_setting_modify_login_pwd"            android:text="@string/login_pwd" />        <TextView            android:id="@+id/text_modify_pay_pwd"            style="@style/PersonalFrgSettingText"            android:drawableBottom="@drawable/personal_frg_setting_modify_pay_pwd"            android:text="@string/pay_pwd" />        <TextView            android:id="@+id/text_exit_app"            style="@style/PersonalFrgSettingText"            android:layout_marginRight="0dp"            android:drawableBottom="@drawable/personal_frg_setting_exit_app"            android:text="@string/exit_app" />    </LinearLayout>    <ScrollView        android:id="@+id/setting_about_us_layout"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginBottom="@dimen/common_lf_margin"        android:background="@drawable/personal_frg_setting_about_us_bg"        android:paddingTop="@dimen/setting_text_padding_30">        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:lineSpacingExtra="@dimen/binary_line_layout_padding"            android:paddingLeft="@dimen/binary_line_layout_padding"            android:paddingRight="@dimen/binary_line_layout_padding"            android:text="@string/mad_crazy_describe"            android:textColor="@color/personal_authentication_text_step"            android:textSize="@dimen/setting_text_18sp" />    </ScrollView>    <LinearLayout        android:id="@+id/setting_feedback_layout"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginBottom="@dimen/common_lf_margin"        android:background="@drawable/personal_frg_setting_suggest_feedback_bg"        android:paddingTop="@dimen/setting_text_padding_30"        android:visibility="gone">        <EditText            android:id="@+id/setting_feedback_edit"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:background="@null"            android:gravity="center"            android:hint="@string/suggest_hint"            android:lineSpacingExtra="@dimen/radius_4dip"            android:paddingLeft="@dimen/binary_line_layout_padding"            android:paddingRight="@dimen/binary_line_layout_padding"            android:textColor="@color/personal_authentication_text_step"            android:textColorHint="@color/stroke_color"            android:textSize="@dimen/setting_text_18sp" />    </LinearLayout>    <LinearLayout        android:id="@+id/setting_login_pwd_layout"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginBottom="@dimen/common_lf_margin"        android:background="@drawable/personal_frg_setting_modify_login_pwd_bg"        android:gravity="center_horizontal"        android:orientation="vertical"        android:paddingTop="@dimen/setting_text_padding_30"        android:visibility="gone">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="@dimen/radius_4dip"            android:gravity="center"            android:text="@string/modify_login_pwd"            android:textColor="@color/personal_setting_text"            android:textSize="18sp" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="@dimen/main_lf_padding"            android:gravity="center_horizontal"            android:orientation="horizontal">            <ImageView style="@style/SettingPwdPic" />            <EditText                android:id="@+id/login_origin_pwd"                style="@style/SettingPwdEditText"                android:hint="@string/origin_pwd"                android:inputType="textPassword" />        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="@dimen/main_lf_padding"            android:gravity="center_horizontal"            android:orientation="horizontal">            <ImageView style="@style/SettingPwdPic" />            <EditText                android:id="@+id/login_new_pwd"                style="@style/SettingPwdEditText"                android:hint="@string/set_new_login_pwd"                android:inputType="textPassword" />        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="@dimen/main_lf_padding"            android:gravity="center_horizontal"            android:orientation="horizontal">            <ImageView style="@style/SettingPwdPic" />            <EditText                android:id="@+id/login_repeat_new_pwd"                style="@style/SettingPwdEditText"                android:hint="@string/set_new_pwd"                android:inputType="textPassword" />        </LinearLayout>        <Button            android:id="@+id/btn_confirm_modify_login"            style="@style/LoginBottomBtn"            android:background="@color/bottom_bt_bg"            android:text="@string/confirm_modify"            android:textSize="@dimen/common_text_22" />    </LinearLayout>    <LinearLayout        android:id="@+id/setting_pay_pwd_layout"        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginBottom="@dimen/common_lf_margin"        android:background="@drawable/personal_frg_setting_modify_pay_pwd_bg"        android:gravity="center_horizontal"        android:orientation="vertical"        android:paddingTop="@dimen/setting_text_padding_30"        android:visibility="gone">        <TextView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="@dimen/radius_4dip"            android:text="@string/modify_pay_pwd"            android:textColor="@color/personal_setting_text"            android:textSize="18sp" />        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="@dimen/main_lf_padding"            android:gravity="center_horizontal"            android:orientation="horizontal">            <ImageView style="@style/SettingPwdPic" />            <EditText                android:id="@+id/pay_origin_pwd"                style="@style/SettingPwdEditText"                android:hint="@string/origin_pwd"                android:inputType="textPassword" />        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="@dimen/main_lf_padding"            android:gravity="center_horizontal"            android:orientation="horizontal">            <ImageView style="@style/SettingPwdPic" />            <EditText                android:id="@+id/pay_new_pwd"                style="@style/SettingPwdEditText"                android:hint="@string/set_new_login_pwd"                android:inputType="textPassword" />        </LinearLayout>        <LinearLayout            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:layout_marginTop="@dimen/main_lf_padding"            android:gravity="center_horizontal"            android:orientation="horizontal">            <ImageView style="@style/SettingPwdPic" />            <EditText                android:id="@+id/pay_repeat_new_pwd"                style="@style/SettingPwdEditText"                android:hint="@string/set_new_pwd"                android:inputType="textPassword" />        </LinearLayout>        <Button            android:id="@+id/btn_confirm_modify_pay"            style="@style/LoginBottomBtn"            android:background="@color/bottom_bt_bg"            android:text="@string/confirm_modify"            android:textSize="@dimen/common_text_22" />    </LinearLayout></LinearLayout>