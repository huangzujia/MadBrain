<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/white"    android:orientation="vertical">    <LinearLayout        android:id="@+id/personal_info_layout"        android:layout_width="match_parent"        android:layout_height="@dimen/personal_title_h"        android:background="@drawable/personal_common_top_bg"        android:gravity="center"        android:orientation="vertical">        <ImageView            android:id="@+id/user_photo"            android:layout_width="@dimen/personal_photo_wh"            android:layout_height="@dimen/personal_photo_wh"            android:layout_alignParentLeft="true"            android:layout_centerVertical="true"            android:layout_margin="8dp"            android:src="@drawable/user_photo" />        <TextView            android:id="@+id/user_name"            style="@style/TextMarquee"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginTop="@dimen/margin_10dip"            android:text="Lisa OR 丽莎奥那"            android:textColor="@color/personal_item_selected"            android:textSize="@dimen/common_text_22" />    </LinearLayout></LinearLayout>