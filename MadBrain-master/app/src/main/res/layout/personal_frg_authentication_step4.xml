<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent">    <View        android:id="@+id/divide_line_frg"        android:layout_width="@dimen/margin_1dp"        android:layout_height="match_parent"        android:layout_centerInParent="true"        android:layout_margin="@dimen/common_lf_margin"        android:visibility="invisible" />    <LinearLayout        android:id="@+id/authentication_step4_ste3"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginLeft="60dp"        android:layout_marginRight="@dimen/main_lf_margin"        android:layout_marginTop="@dimen/binary_line_layout_padding"        android:layout_toRightOf="@id/divide_line_frg"        android:gravity="left"        android:orientation="vertical"></LinearLayout>    <Button        android:id="@+id/authentication_confirm_sure_btn"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_centerVertical="true"        android:layout_marginLeft="@dimen/binary_line_layout_padding"        android:layout_marginRight="@dimen/binary_line_layout_padding"        android:layout_toRightOf="@id/authentication_step4_ste3"        android:background="@drawable/personal_frg_authentication_circle_bg"        android:padding="2dp"        android:text="@string/confirm_sure"        android:textColor="@color/white"        android:textSize="17sp" /></RelativeLayout>