<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/layout_step3"    android:layout_width="wrap_content"    android:layout_height="wrap_content"    android:orientation="vertical">    <RelativeLayout        android:id="@+id/layout_step3_up"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginBottom="@dimen/common_lf_margin">        <TextView            android:id="@+id/layout_step3_up_title"            style="@style/PersonalFrgInfoText"            android:layout_alignParentLeft="true"            android:layout_centerVertical="true"            android:text="@string/identity_picture"            android:textColor="@color/personal_authentication_text_step" />        <LinearLayout            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_margin="2dp"            android:layout_toRightOf="@id/layout_step3_up_title"            android:gravity="center"            android:orientation="horizontal">            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginRight="@dimen/margin_10dip"                android:gravity="center"                android:orientation="vertical">                <ImageView                    android:id="@+id/grade_certificate_pic1"                    android:layout_width="@dimen/personal_authentication_photo_wh"                    android:layout_height="@dimen/personal_authentication_photo_wh"                    android:background="@drawable/personal_add_pic_bg" />                <TextView                    style="@style/PersonalFrgInfoText"                    android:layout_marginLeft="@dimen/radius_4dip"                    android:layout_marginTop="@dimen/radius_4dip"                    android:text="@string/positive_photo" />            </LinearLayout>            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:gravity="center"                android:orientation="vertical">                <ImageView                    android:id="@+id/grade_certificate_pic2"                    android:layout_width="@dimen/personal_authentication_photo_wh"                    android:layout_height="@dimen/personal_authentication_photo_wh"                    android:background="@drawable/personal_add_pic_bg" />                <TextView                    style="@style/PersonalFrgInfoText"                    android:layout_marginLeft="@dimen/radius_4dip"                    android:layout_marginTop="@dimen/radius_4dip"                    android:text="@string/negative_photo" />            </LinearLayout>        </LinearLayout>    </RelativeLayout>    <LinearLayout        android:id="@+id/layout_step3_down"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:gravity="center"        android:orientation="horizontal">        <TextView            android:id="@+id/layout_step3_down_title"            style="@style/PersonalFrgInfoText"            android:layout_marginRight="8dp"            android:textColor="@color/personal_authentication_text_step" />        <ImageView            android:id="@+id/grade_certificate_pic3"            android:layout_width="@dimen/personal_authentication_photo_wh"            android:layout_height="@dimen/personal_authentication_photo_wh"            android:layout_marginRight="14dp"            android:background="@drawable/personal_add_pic_bg" />        <ImageView            android:id="@+id/grade_certificate_pic4"            android:layout_width="@dimen/personal_authentication_photo_wh"            android:layout_height="@dimen/personal_authentication_photo_wh"            android:background="@drawable/personal_add_pic_bg" />    </LinearLayout></LinearLayout>