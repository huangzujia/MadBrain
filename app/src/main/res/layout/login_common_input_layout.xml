<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="224dp">

    <ImageView
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="@dimen/edit_layout_width"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/line"
        android:gravity="right|center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/login_margin_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_name_image" />

            <EditText
                android:id="@+id/register_name"
                style="@style/EditText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="@string/input_name">

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_margin_top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_sex_btn" />

            <EditText
                android:id="@+id/register_sex"
                style="@style/EditText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="@string/register_sex" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_margin_top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_date_btn" />

            <EditText
                android:id="@+id/register_date"
                style="@style/EditText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="@string/select_birth_date" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/edit_layout_width"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/line"
        android:gravity="left|center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/login_margin_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_flag_btn" />

            <EditText
                android:id="@+id/register_nation"
                style="@style/EditText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="@string/select_nationality" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_margin_top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_phone_btn" />

            <EditText
                android:id="@+id/register_phone"
                style="@style/EditText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="@string/contact_way" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_margin_top"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/user_pwd_image" />

            <EditText
                android:id="@+id/register_pwd"
                style="@style/EditText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="@string/set_pwd"
                android:inputType="textPassword" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>