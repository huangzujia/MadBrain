<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dip"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/set_headportrait"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:id="@+id/iv_item_introduction_icon"
        />

        <RelativeLayout
            android:layout_toRightOf="@+id/iv_item_introduction_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:id="@+id/ll_item_listview_introduction"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="match_parent"
                   >

                    <TextView
                        android:id="@+id/tv_item_introduction_news_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/news_title"
                        android:singleLine="true"
                        android:layout_marginTop="@dimen/login_margin_top"
                        android:paddingLeft="@dimen/margin_10dip"
                        />
                    <View
                        android:id="@+id/view_line_item_introduction"
                        android:layout_height="@dimen/margin_1dp"
                        android:layout_width="match_parent"
                        android:background="@color/blue"
                        android:layout_centerVertical="true"
                        />

                    <RelativeLayout
                        android:layout_below="@id/view_line_item_introduction"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        >
                        <ImageButton
                            android:id="@+id/ib_item_introduction_favorite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_10dip"
                            android:src="@drawable/favorite_introduction"
                            />
                        <ImageButton
                            android:id="@+id/ib_item_introduction_zan"
                            android:layout_toRightOf="@id/ib_item_introduction_favorite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_10dip"
                            android:src="@drawable/favorite_introduction"
                        />
                        <ImageButton
                            android:id="@+id/ib_item_introduction_comment"
                            android:layout_toRightOf="@id/ib_item_introduction_zan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_10dip"
                            android:src="@drawable/favorite_introduction"
                        />
                        <ImageButton
                            android:id="@+id/ib_item_introduction_share"
                            android:layout_toRightOf="@id/ib_item_introduction_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_10dip"
                            android:src="@drawable/favorite_introduction"
                        />

                        <TextView
                            android:id="@+id/tv_item_introduction_updatetime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="2016-06-20 14:01"
                            />

                    </RelativeLayout>




                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent">


                    <TextView
                        android:id="@+id/tv_item_introduction_detail"

                        android:layout_width="@dimen/text_size_18"
                        android:layout_height="wrap_content"
                        android:text="@string/check_detail"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/text_size_18"

                        />

                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>


</RelativeLayout>
