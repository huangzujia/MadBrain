<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_2">
            <LinearLayout
                android:id="@+id/ll_head"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@color/main_1"
                android:paddingTop="25dp"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/photo_a" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lisa  丽莎"
                        android:textSize="23sp"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:paddingRight="30dp"
                        android:src="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:drawableLeft="@drawable/heart"
                        android:gravity="center_vertical"
                        android:textSize="20sp"
                        android:text="  23·纽约"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout 
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_below="@id/ll_head">
                 <LinearLayout 
                     android:layout_width="match_parent"
                     android:layout_height="0dp"
                     android:layout_weight="7"
                     android:gravity="center_horizontal"
                     android:orientation="vertical">
                    
                     <TextView 
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textColor="@color/white"
                         android:textSize="25sp"
                         android:padding="5dp"
                         android:layout_marginTop="15dp"
                         android:text="@string/recalling"/>
                     
                     <ImageView 
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:layout_marginTop="15dp"
                         android:src="@drawable/time_bg"/>
                     
                     
                     <TextView 
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textColor="@color/white"
                         android:textSize="25sp"
                         android:padding="5dp"
                         android:layout_marginTop="15dp"
                         android:text="@string/change_bg"/>
                     
                     <LinearLayout 
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:layout_marginTop="15dp"
                         android:orientation="horizontal">
                         <ImageView 
                             android:id="@+id/img_bg1"
                             android:layout_height="60dp"
                             android:layout_width="60dp"
                             android:src="@color/competition_bg1"/>
                         
                         <ImageView 
                             android:id="@+id/img_bg2"
                             android:layout_height="60dp"
                             android:layout_width="60dp"
                             android:layout_marginLeft="15dp"
                             android:src="@color/competition_bg2"/>
                         
                         <ImageView 
                             android:id="@+id/img_bg3"
                             android:layout_height="60dp"
                             android:layout_width="60dp"
                             android:layout_marginLeft="15dp"
                             android:src="@color/competition_bg3"/>
                     </LinearLayout>
                 </LinearLayout>
                 <LinearLayout 
                     android:layout_width="match_parent"
                     android:layout_height="0dp"
                     android:layout_weight="3"
                     android:gravity="center_horizontal"
                     android:orientation="vertical"
                     android:layout_marginBottom="4dp">
                     <Button 
                         android:id="@+id/btn_end"
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:text="@string/end_memory"
                         android:textColor="@color/white"
                         android:textSize="25sp"
                         android:background="@drawable/start_end_memory"/>
                     
                     <TextView 
                         android:id="@+id/txt_exit"
                         android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                         android:textColor="@color/white"
                         android:text="@string/exit_competition"
                         android:layout_marginTop="30dp"
                         android:drawableLeft="@drawable/arrow"
                         android:textSize="25sp"/>
                 </LinearLayout>
            </LinearLayout>
            
</RelativeLayout>
