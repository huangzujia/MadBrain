<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:weightSum="2">    <include        layout="@layout/login_common_logo_layout"        android:layout_width="match_parent"        android:layout_height="0dip"        android:layout_weight="1" />    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="0dip"        android:layout_weight="1"        android:background="@color/white">        <ImageView            android:id="@+id/line"            android:layout_width="1dp"            android:layout_height="match_parent"            android:layout_centerInParent="true"            android:layout_margin="25dp"            android:background="@color/line" />        <ImageView            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_centerVertical="true"            android:layout_marginRight="25dp"            android:layout_toLeftOf="@id/line"            android:src="@drawable/logo" />        <LinearLayout            android:layout_width="@dimen/edit_layout_width"            android:layout_height="match_parent"            android:layout_centerVertical="true"            android:layout_toRightOf="@id/line"            android:gravity="left|center_vertical"            android:orientation="vertical"            android:padding="@dimen/login_margin_top">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:orientation="horizontal">                <ImageView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:src="@drawable/user_name_image" />                <EditText                    android:id="@+id/edit_login_name"                    style="@style/EditText"                    android:layout_width="wrap_content"                    android:layout_height="match_parent"                    android:hint="@string/input_name">                    <requestFocus />                </EditText>            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="@dimen/login_margin_top"                android:orientation="horizontal">                <ImageView                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:src="@drawable/user_pwd_image" />                <EditText                    android:id="@+id/edit_login_pwd"                    style="@style/EditText"                    android:layout_width="wrap_content"                    android:layout_height="match_parent"                    android:hint="@string/input_pwd"                    android:inputType="textPassword" />            </LinearLayout>            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:layout_marginTop="14dp"                android:gravity="center_vertical"                android:orientation="horizontal">                <ImageView                    android:layout_width="0dp"                    android:layout_height="1dp"                    android:layout_marginRight="4dp"                    android:layout_weight="1"                    android:src="@color/text_gray" />                <TextView                    android:id="@+id/text_new_user"                    android:layout_width="0dp"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:gravity="left"                    android:text="@string/new_user_str"                    android:textColor="@color/text_gray"                    android:textSize="15sp" />                <TextView                    android:id="@+id/text_forget_pwd"                    android:layout_width="0dp"                    android:layout_height="wrap_content"                    android:layout_weight="1"                    android:gravity="right"                    android:text="@string/forget_password_str"                    android:textColor="@color/text_gray"                    android:textSize="15sp" />                <ImageView                    android:layout_width="0dp"                    android:layout_height="1dp"                    android:layout_marginLeft="4dp"                    android:layout_weight="1"                    android:src="@color/text_gray" />            </LinearLayout>            <Button                android:id="@+id/btn_login"                style="@style/LoginBottomBtn"                android:background="@drawable/login_btn" />        </LinearLayout>    </RelativeLayout></LinearLayout>