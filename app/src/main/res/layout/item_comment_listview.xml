<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">


    <RelativeLayout
        android:id="@+id/relative_user_pic"
        android:layout_width="@dimen/comment_use_height"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/set_headportrait"
            android:scaleType="fitStart"
            android:layout_centerVertical="true"
            android:id="@+id/iv_item_comment_userid"
            />


    </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/relative_user_pic"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/ll_item_listview_hotspot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_item_username_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/login_margin_top"
                    android:paddingLeft="@dimen/margin_10dip"
                    />

                <TextView
                    android:id="@+id/tv_item_comment_updatetime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="2016-06-20 14:01"
                    />

            </RelativeLayout>


                <TextView
                    android:id="@+id/tv_item_comment_content"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/stroke_color"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/text_size_18"

                    />




        </LinearLayout>



</RelativeLayout>
