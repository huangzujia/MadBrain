<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent" >
    <LinearLayout 
        android:layout_height="140dp"
        android:layout_width="fill_parent"
        android:background="@color/competition"
        android:orientation="horizontal">
        <LinearLayout 
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3">
            <RelativeLayout 
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="5">
                <TextView 
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/date"
                    android:text="@string/competition_date"/>
            </RelativeLayout>
            <LinearLayout 
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_weight="5" >
                <TextView 
                    android:id="@+id/txt_year"
                    android:textColor="@color/competition_txt"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="22sp" 
                    android:text="2016"/>
                <ImageView 
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/slash"/>
                <TextView 
                    android:id="@+id/txt_date"
                    android:textColor="@color/competition_txt"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="22sp" 
                    android:layout_marginTop="40dp"
                    android:text="06.28"/>
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3">
            
            <RelativeLayout 
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="5">
                <TextView 
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/time"
                    android:text="@string/competition_time"/>
            </RelativeLayout>
            <LinearLayout 
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_weight="5" >
                <TextView 
                    android:id="@+id/txt_time"
                    android:textColor="@color/competition_txt"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="22sp" 
                    android:text="10:00"/>
                <ImageView 
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/slash"/>
                <TextView 
                    android:id="@+id/txt_unit"
                    android:textColor="@color/competition_txt"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="22sp" 
                    android:layout_marginTop="40dp"
                    android:text="am"/>
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
                android:orientation="vertical"
            android:layout_weight="3">
            <RelativeLayout 
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="5">
                <TextView 
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_centerInParent="true"
                    android:drawableLeft="@drawable/money"
                    android:text="@string/apply_cost"/>
            </RelativeLayout>
            <LinearLayout 
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_weight="5" >
                <TextView 
                    android:id="@+id/txt_cost"
                    android:textColor="@color/competition_txt"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="22sp" 
                    android:text="￥5.00"/>
                <ImageView 
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/slash"/>
                <TextView 
                    android:id="@+id/txt_c_unit"
                    android:textColor="@color/competition_txt"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="22sp" 
                    android:layout_marginTop="40dp"
                    android:text="元"/>
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3">
            <RelativeLayout 
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_weight="5">
                 <ImageView 
                     android:layout_height="wrap_content"
                     android:layout_width="wrap_content"
                     android:src="@drawable/nor_attention"
                     android:layout_marginRight="10dp"
                     android:layout_marginTop="10dp"/>
            </RelativeLayout>
            <LinearLayout 
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:gravity="right|bottom"
                android:layout_weight="5" >
                 <Button 
                     android:id="@+id/btn_apply"
                     android:layout_height="55dp"
                     android:layout_width="180dp"
                     android:layout_marginRight="10dp"
                     android:layout_marginBottom="3dp"
                     android:textColor="@color/main_1"
                     android:background="@drawable/my_apply_bg"
                     android:text="@string/my_apply"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
